{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
      "url": "https://raw.githubusercontent.com/cyonjy/FIT3179/main/w10-homework/data/cleaned_household_income.csv"
  },
  "params": [
      {
          "name": "state_option",
          "bind": {
              "input": "select",
              "options": [
                  null,
                  "Johor",
                  "Kedah",
                  "Kelantan",
                  "Melaka",
                  "Negeri Sembilan",
                  "Pahang",
                  "Pulau Pinang",
                  "Perak",
                  "Perlis",
                  "Selangor",
                  "Terengganu",
                  "Sabah",
                  "Sarawak",
                  "W.P. Labuan",
                  "W.P. Putrajaya"
              ],
              "labels": [
                  "Show All",
                  "Johor",
                  "Kedah",
                  "Kelantan",
                  "Melaka",
                  "Negeri Sembilan",
                  "Pahang",
                  "Pulau Pinang",
                  "Perak",
                  "Perlis",
                  "Selangor",
                  "Terengganu",
                  "Sabah",
                  "Sarawak",
                  "W.P. Labuan",
                  "W.P. Putrajaya"
              ],
              "name": "Choose state: "
          }
      }
  ],
  "vconcat": [
      {
          "width": 800,
          "height": 450,
          "title": "Proportional Symbol Map of Income and Poverty in Malaysia (2022)",
          "projection": { "type": "equalEarth" },
          "layer": [
              {
                  "data": {
                      "url": "https://raw.githubusercontent.com/cyonjy/FIT3179/main/w9-homework/js/gadm41_MYS_1.json",
                      "format": { "type": "topojson", "feature": "gadm41_MYS_1" }
                  },
                  "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
              },
              {
                  "data": {
                      "url": "https://raw.githubusercontent.com/cyonjy/FIT3179/main/w10-homework/data/cleaned_household_income.csv"
                  },
                  "mark": { "type": "circle" },
                  "encoding": {
                      "longitude": { "field": "longitude", "type": "quantitative" },
                      "latitude": { "field": "latitude", "type": "quantitative" },
                      "size": {
                          "field": "poverty",
                          "type": "quantitative",
                          "title": "Poverty Level",
                          "scale": { "range": [10, 150] }
                      },
                      "color": { "value": "darkred" },
                      "tooltip": [
                          { "field": "state", "type": "nominal", "title": "State" },
                          { "field": "district", "type": "nominal", "title": "District" },
                          { "field": "income_mean", "type": "quantitative", "title": "Mean Income (RM)", "format": ".2f" },
                          { "field": "poverty", "type": "quantitative", "title": "Poverty Level" }
                      ]
                  },
                  "transform": [
                      {
                          "filter": "state_option == null || datum.state == state_option"
                      }
                  ]
              }
          ]
      },
      {
          "width": 900,
          "height": 450,
          "title": "Total Median Income by State in Malaysia (2022)",
          "transform": [
              {
                  "aggregate": [
                      {
                          "op": "sum",
                          "field": "income_median",
                          "as": "total_income"
                      }
                  ],
                  "groupby": ["state"]
              },
              {
                  "window": [
                      {
                          "op": "rank",
                          "as": "rank"
                      }
                  ],
                  "sort": [
                      {
                          "field": "total_income",
                          "order": "descending"
                      }
                  ]
              },
              {
                  "calculate": "datum.rank == 1 ? 'Highest total median income: ' + datum.state : ''",
                  "as": "annotation"
              }
          ],
          "layer": [
              {
                  "mark": {
                      "type": "bar",
                      "color": "#f6d49d"
                  },
                  "encoding": {
                      "x": {
                          "field": "state",
                          "type": "nominal",
                          "title": "State",
                          "axis": {
                              "labelAngle": 45,
                              "grid": false
                          }
                      },
                      "y": {
                          "field": "total_income",
                          "type": "quantitative",
                          "title": "Total Median Income (RM)",
                          "axis": {
                              "format": ".2f",
                              "grid": false
                          }
                      },
                      "tooltip": [
                          { "field": "state", "type": "nominal", "title": "State" },
                          { "field": "total_income", "type": "quantitative", "title": "Total Median Income (RM)", "format": ".2f" }
                      ]
                  },
                  "transform": [
                      {
                          "filter": "state_option == null || datum.state == state_option"
                      }
                  ]
              },
              {
                  "mark": {
                      "type": "text",
                      "align": "center",
                      "baseline": "middle",
                      "dy": -10,
                      "fontSize": 10,
                      "color": "darkred"
                  },
                  "encoding": {
                      "x": { "field": "state", "type": "nominal" },
                      "y": { "field": "total_income", "type": "quantitative" },
                      "text": { "field": "annotation", "type": "nominal" }
                  }
              }
          ]
      }
  ],
  "config": { "title": { "font": "sans-serif", "fontSize": 14 } }
}
