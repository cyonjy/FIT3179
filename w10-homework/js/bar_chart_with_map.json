{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/cyonjy/FIT3179/main/w10-homework/data/cleaned_household_income.csv"
  },
  "vconcat": [
    {
      "width": "container",
      "height": 450,
      "title": "Proportional Symbol Map of Income and Poverty in Malaysia (2022)",
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "selection": {
            "income_med_slider": {
              "type": "single",
              "fields": ["total_income"],
              "bind": {
                "input": "range",
                "min": 4000,
                "max": 160000,
                "step": 10000,
                "name": "Minimum total median income (RM): "
              }
            }
          },
          "data": {
            "url": "https://raw.githubusercontent.com/cyonjy/FIT3179/main/w9-homework/js/gadm41_MYS_1.json",
            "format": {"type": "topojson", "feature": "gadm41_MYS_1"}
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/cyonjy/FIT3179/main/w10-homework/data/cleaned_household_income.csv"
          },
          "mark": {"type": "circle", "tooltip": {"content": "data"}},
          "encoding": {
            "longitude": {"field": "longitude", "type": "quantitative"},
            "latitude": {"field": "latitude", "type": "quantitative"},
            "size": {
              "field": "poverty",
              "type": "quantitative",
              "title": "Poverty Level"
            },
            "color": {
              "field": "total_income",
              "type": "quantitative",
              "title": "Total Median Income",
              "scale": {
                "domain": [4000, 160000],
                "range": ["#f6d49d", "#bd0026"]
              }
            }
          }
        }
      ]
    },
    {
      "width": "container",
      "height": 300,
      "title": "Total Median Income by State in Malaysia (2022)",
      "transform": [
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "income_median",
              "as": "total_income"
            }
          ],
          "groupby": ["state"]
        },
        {
          "filter": "datum.total_income >= income_med_slider"
        },
        {
          "window": [
            {
              "op": "rank",
              "as": "rank"
            }
          ],
          "sort": [
            {
              "field": "total_income",
              "order": "descending"
            }
          ]
        },
        {
          "calculate": "datum.rank == 1 ? 'Highest total median income: ' + datum.state : ''",
          "as": "annotation"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "bar",
            "color": "#f6d49d"
          },
          "encoding": {
            "x": {
              "field": "state",
              "type": "nominal",
              "title": "State",
              "axis": {
                "labelAngle": 45,
                "grid": false
              }
            },
            "y": {
              "field": "total_income",
              "type": "quantitative",
              "title": "Total Median Income (RM)",
              "axis": {
                "format": ".2f",
                "grid": false
              }
            },
            "tooltip": [
              {
                "field": "state",
                "type": "nominal",
                "title": "State"
              },
              {
                "field": "total_income",
                "type": "quantitative",
                "title": "Total Median Income (RM)",
                "format": ".2f"
              }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "baseline": "middle",
            "dy": -10,
            "fontSize": 10,
            "color": "darkred"
          },
          "encoding": {
            "x": {
              "field": "state",
              "type": "nominal"
            },
            "y": {
              "field": "total_income",
              "type": "quantitative"
            },
            "text": {
              "field": "annotation",
              "type": "nominal"
            }
          }
        }
      ]
    }
  ],
  "config": {"title": {"font": "sans-serif", "fontSize": 14}}
}
