{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Line graph showing the income mean over time for different states with selection.",
  "data": {
    "url": "https://raw.githubusercontent.com/cyonjy/FIT3179/main/dv2/data/cleaned_household_income.csv",
    "format": { "type": "csv" }
  },
  "title": {
    "text": "Line Chart of Mean income Over Time",
    "subtitle": "A visualization of mean income over time for different states in Malaysia",
    "anchor": "middle",
    "fontSize": 16,
    "subtitleFontSize": 12
  },
  "params": [
    {
      "name": "sel_state",
      "value": null,
      "select": {
        "type": "point",
        "on": "click",
        "fields": ["state"]
      },
      "bind": "legend"
    },
    {
      "name": "year_brush",
      "select": {
        "type": "interval",
        "encodings": ["x"]
      }
    }
  ],
  "vconcat": [
    {
      "width": 880,
      "height": 400,
      "mark": "line",
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "scale": {
            "domain": {
              "param": "year_brush"
            }
          },
          "axis": { "title": "Year", "grid": false }
        },
        "y": {
          "field": "income_mean",
          "type": "quantitative",
          "title": "Mean Income (RM)"
        },
        "color": {
          "field": "state",
          "type": "nominal",
          "scale": { "scheme": "category20" }
        },
        "opacity": {
          "condition": {
            "param": "sel_state",
            "value": 1.0
          },
          "value": 0.1
        },
        "tooltip": [
          { "field": "state", "type": "nominal", "title": "State" },
          { "field": "date", "type": "temporal", "title": "Year" },
          { "field": "income_mean", "type": "quantitative", "title": "Mean Income (RM)" }
        ]
      }
    },
    {
      "width": 880,
      "height": 60,
      "mark": "area",
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "axis": { "title": "Year" }
        },
        "y": {
          "field": "income_mean",
          "type": "quantitative",
          "title": "Mean Income (RM)",
          "axis": {
            "tickCount": 3,
            "grid": false
          }
        }
      }
    }
  ]
}
