{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Proportional Symbol Map of Poverty in Malaysia (2022)",
  "projection": {
      "type": "equalEarth"
  },
  "layer": [
      {
          "data": {
              "url": "https://raw.githubusercontent.com/cyonjy/FIT3179/main/dv2/js/gadm41_MYS_1.json",
              "format": {"type": "topojson", "feature": "gadm41_MYS_1"}
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
          "data": {
              "url": "https://raw.githubusercontent.com/cyonjy/FIT3179/main/dv2/data/cleaned_household_income.csv"
          },
          "mark": {"type": "circle"},
          "encoding": {
              "longitude": {"field": "longitude", "type": "quantitative"},
              "latitude": {"field": "latitude", "type": "quantitative"},
              "size": {
                  "field": "poverty",
                  "type": "quantitative",
                  "title": "Poverty Level",
                  "scale": {"range": [10, 150]}
              },
              "color": {
                  "value": "red"
              },
              "tooltip": [
                  {"field": "state", "type": "nominal", "title": "State"},
                  {"field": "district", "type": "nominal", "title": "District"},
                  {"field": "poverty", "type": "quantitative", "title": "Poverty Level"}
              ]
          }
      }
  ]
}
