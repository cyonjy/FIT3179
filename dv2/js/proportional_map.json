{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 500,
  "title": {
    "text": "Proportional Symbol Map of Poverty in Malaysia (2022)",
    "subtitle": "A visualization of poverty levels across different states and districts",
    "anchor": "middle",
    "fontSize": 16,
    "subtitleFontSize": 12
  },
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/cyonjy/FIT3179/main/dv2/js/gadm41_MYS_1.json",
        "format": {
          "type": "topojson",
          "feature": "gadm41_MYS_1"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "white",
        "stroke": "grey",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/cyonjy/FIT3179/main/dv2/data/cleaned_household_income.csv"
      },
      "mark": {
        "type": "circle",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "poverty",
          "type": "quantitative",
          "title": "Poverty Level",
          "scale": {
            "range": [10, 150],
            "domain": [0, 100] 
          }
        },
        "color": {
          "field": "state",
          "type": "nominal",
          "title": "State",
          "legend": {
            "orient": "right",
            "title": "State"
          },
          "scale": {
            "scheme": "category20"
          }
        },
        "tooltip": [
          {
            "field": "state",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "district",
            "type": "nominal",
            "title": "District"
          },
          {
            "field": "poverty",
            "type": "quantitative",
            "title": "Poverty Level",
            "format": ".0f" 
          }
        ]
      }
    }
  ]
}
